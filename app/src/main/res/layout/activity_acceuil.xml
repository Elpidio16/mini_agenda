<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bleu_claire"
    tools:context=".AcceuilActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <EditText
            android:id="@+id/search_bar_liste_des_taches"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Rechercher...."
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            android:backgroundTint="@color/bleu_claire"
            android:inputType="textImeMultiLine"
            android:textSize="22dp">
        </EditText>

        <ListView
            android:id="@+id/listeView_des_taches"
            android:layout_width="match_parent"
            android:background="@color/bleu_claire"
            android:textSize="30dp"
            android:layout_height="wrap_content">
        </ListView>

    </LinearLayout>

    <Button
        android:id="@+id/addTacheButton"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:background="@drawable/circle_btn"
        android:text="+"
        android:textColor="@color/bleu"
        android:textSize="43dp"
        app:backgroundTint="@color/white"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="15dp">

    </Button>


</RelativeLayout>